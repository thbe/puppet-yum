[main]
cachedir=/var/cache/yum/$basearch/$releasever
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1
installonly_limit=3

# Exclude rpms from update if needed
<%- if scope.lookupvar("yum::yum_exclude") != "unset" -%>
exclude=<%= scope.lookupvar("yum::yum_exclude") %>
<%- end -%>

# Set proxy for internet access if needed
<%- if scope.lookupvar("yum::yum_proxy") != "unset" -%>
proxy=<%= scope.lookupvar("yum::yum_proxy") %>
<%- end -%>
<%- if scope.lookupvar("yum::yum_proxy_user") != "unset" -%>
proxy_username=<%= scope.lookupvar("yum::yum_proxy_user") %>
<%- end -%>
<%- if scope.lookupvar("yum::yum_proxy_password") != "unset" -%>
proxy_password=<%= scope.lookupvar("yum::yum_proxy_password") %>
<%- end -%>
