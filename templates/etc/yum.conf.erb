[main]
cachedir=/var/cache/yum/$basearch/$releasever
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1
installonly_limit=3

# Exclude rpms from update
<% if @yumExclude != 'no' %>
exclude=<%= @yumExclude %>
<% end %>

# Set proxy for internet access
<% if @yumProxy != 'no' %>
proxy=<%= @yumProxy %>
<% end %>
<% if @yumProxyUser != 'no' %>
proxy_username=<%= @yumProxyUser %>
<% end %>
<% if @yumProxyPassword != 'no' %>
proxy_password=<%= @yumProxyPassword %>
<% end %>
